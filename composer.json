{
    "name": "lekoala/silverstripe-filepond",
    "description": "Use FilePond fields in SilverStripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "FilePond",
        "upload",
        "form",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "LeKoala",
            "email": "thomas@lekoala.be"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/framework": "^6",
        "silverstripe/assets": "^3",
        "silverstripe/versioned": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "extra": {
        "installer-name": "filepond",
        "expose": [
            "client"
        ]
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\FilePond\\": "src/",
            "LeKoala\\FilePond\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-filepond/issues"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/",
        "test": "phpunit -v"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
